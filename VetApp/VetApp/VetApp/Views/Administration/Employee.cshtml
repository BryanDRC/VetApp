<!--  Modal content for the Large example -->
<div class="modal fade" id="bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Formulario Empleado</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div style="margin-left: 25%;" class="row">
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="userNameModal">
                        </select>
                    </div> <!-- end col -->
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Primer Apellido</label>
                        <input type="text" class="form-control" id="userFirstLastNameModal">
                        </select>
                    </div> <!-- end col -->

                </div> <!-- end row -->
                <br>
                <div style="margin-left: 25%;" class="row">
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Segundo Apellido</label>
                        <input type="text" class="form-control" id="userSecondLastNameModal">
                        </select>
                    </div> <!-- end col -->
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="userIdCardModal" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                        </select>
                    </div> <!-- end col -->
                </div> <!-- end row -->
                <br>
                <div style="margin-left: 25%;" class="row">
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Número de Teléfono</label>
                        <input type="text" class="form-control" id="userPhoneNumberModal" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                        </select>
                    </div> <!-- end col -->
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Correo Electronico</label>
                        <input type="text" class="form-control" id="userMailModal">
                        </select>
                    </div> <!-- end col -->
                </div> <!-- end row -->
                <br>
                <div style="margin-left: 25%;" class="row">
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Alias</label>
                        <input type="text" class="form-control" id="userNickNameModal">
                        </select>
                    </div> <!-- end col -->
                    <div class=" col-md-4">
                        <label for="inputZip" class="form-label">Contraseña</label>
                        <input type="text" class="form-control" id="userPasswordModal">
                        </select>
                    </div> <!-- end col -->
                </div> <!-- end row -->
                <div style="margin-left: 25%;" class="row">

                    <div style="margin-left: 15%;" class="col-md-4">
                        <label for="inputState" class="form-label">Rol</label>
                        <select id="idRolModal" class="form-select">
                            <option value="1">IT</option>
                            <option value="2">Insumos</option>
                            <option value="3">Recepcionista</option>
                        </select>
                    </div> <!-- end col -->
                    <br>
                    <div style="margin-left: 14%;" class="row">
                        <div class="col-md-4">
                            <br>
                            <h4 class="header-title">Foto del Empleado</h4>

                            <input type="file" data-plugins="dropify" data-height="100" id="userPictureModal" />

                        </div>
                    </div>
                </div> <!-- end row -->
                <br>

                <br>
                <div class="row">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" id="btnGuardarModal">Guardar Cambios</button>
                    </div>
                </div>


            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row justify-content-between">
                                <div class="col-md-4">
                                    <div style="margin-bottom: -40px;" class="mt-3 mt-md-0">
                                        <!-- Large modal -->
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#bs-example-modal-lg">Agregar Empleado</button>
                                    </div>
                                </div><!-- end col-->
                                <div class="col-md-8">
                                    <form class="d-flex flex-wrap align-items-center justify-content-sm-end">
                                        <label for="status-select" class="me-2">Buscar Por</label>
                                        <div class="me-sm-2">
                                            <select class="form-select my-1 my-md-0" id="status-select">
                                                <option selected="">Todo</option>
                                                <option value="1">Nombre</option>
                                                <option value="2">Apellido</option>
                                                <option value="3">Cédula</option>
                                                <option value="4">Número Telefónico</option>
                                                <option value="4">Rol</option>
                                            </select>
                                        </div>
                                        <label for="inputPassword2" class="visually-hidden">Buscar</label>
                                        <div>
                                            <input type="search" class="form-control my-1 my-md-0" id="inputPassword2" placeholder="Buscar...">
                                        </div>
                                    </form>
                                </div>
                            </div> <!-- end row -->
                        </div>
                    </div> <!-- end card -->
                </div><!-- end col-->
            </div>
            <!-- end row -->
            <div class="row">
                @foreach (var user in ViewBag.users)
                {
                    <div class="col-xl-4">
                        <div class="card">
                            <div class="text-center card-body">
                                <div class="dropdown float-end">
                                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="mdi mdi-dots-vertical"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <!-- item-->
                                        <a href=@Url.Action("EditarEmpleado","Administracion") class="dropdown-item">Editar</a>
                                        <!-- item-->
                                        <a href="javascript:void(0);" class="dropdown-item">Eliminar</a>
                                    </div>
                                </div>
                                <div>
                                    <img src="@user.UserPicture" class="rounded-circle avatar-xl img-thumbnail mb-2" alt="profile-image">

                                    <div class="text-start">
                                        <p class="text-muted font-13"><strong>Nombre:</strong><span class="ms-2">@user.UserName</span></p>

                                        <p class="text-muted font-13"><strong>Cédula:</strong><span class="ms-2">@user.UserIdCard</span></p>

                                        <p class="text-muted font-13"><strong>Número Telefónico:</strong><span class="ms-2">@user.UserPhoneNumber</span></p>

                                        <p class="text-muted font-13"><strong>Correo Electrónico:</strong><span class="ms-2">@user.UserMail</span></p>

                                        <p class="text-muted font-13"><strong>Rol:</strong><span class="ms-2">@user.RolName</span></p>
                                    </div>


                                </div>
                            </div>
                        </div>

                    </div> <!-- end col -->
                }
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>

