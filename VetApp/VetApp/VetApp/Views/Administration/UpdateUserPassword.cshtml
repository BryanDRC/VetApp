@{
	ViewData["Title"] = "UpdateUserPassword";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->
<div>
	<div class="content-page">
		<div class="content">
			<!-- Start Content -->
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-6">
						<br>
						<br>
						<br>
						<div class="card">
							<div class="card-body">
								<h4 class="mb-3 header-title">Cambio de contraseña</h4>
								<input type="hidden" id="userMail" name="userMail" value="@ViewBag.Email" />
								<div class="mb-2">
									<label class="form-label">Contraseña</label>
									<input type="password" class="form-control" id="password" placeholder="Nueva contraseña" oninput="validatePassword();">
									<label id="passwordMessage" class="form-label" style="color:red;"></label>
								</div>
								<div class="mb-2">
									<label class="form-label">Confirmar contraseña</label>
									<input type="password" class="form-control" id="confirmPassword" placeholder="Confirmar contraseña" oninput="validatePassword();">
									<label id="confirmPasswordMessage" class="form-label" style="color:red;"></label>
								</div>
								<button type="button" class="btn btn-primary waves-effect waves-light" onclick="UpdateUserPassword();">Cambiar contraseña</button>
							</div> <!-- end card-body -->
						</div> <!-- end card -->
					</div> <!-- end col -->
				</div> <!-- end row -->
			</div> <!-- end container-fluid -->
		</div>
	</div>
</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
<script src="~/libs/jquery/jquery.min.js"></script>
<script src="~/libs/jquery.counterup/jquery.counterup.min.js"></script>

<script charset="utf-8" src="~/js/Administration/UpdateUserPassword.js"></script>